{
  "name": "svelte-simple-calendar",
  "type": "module",
  "version": "0.4.0",
  "license": "MIT",
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "description": "Calendar component for Svelte/SvelteKit",
  "keywords": [
    "Svelte",
    "SvelteKit",
    "Calendar",
    "Component"
  ],
  "repository": "https://github.com/calvo-jp/svelte-simple-calendar",
  "bugs": {
    "url": "https://github.com/calvo-jp/svelte-simple-calendar/issues"
  },
  "author": {
    "name": "John Paul Calvo",
    "email": "calvojp92@gmail.com"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "release": "release-it"
  },
  "devDependencies": {
    "@sveltejs/adapter-vercel": "5.3.0",
    "@sveltejs/enhanced-img": "0.2.0",
    "@sveltejs/kit": "2.5.10",
    "@sveltejs/package": "2.3.1",
    "@sveltejs/vite-plugin-svelte": "3.1.0",
    "@types/eslint": "8.56.10",
    "@typescript-eslint/eslint-plugin": "7.10.0",
    "@typescript-eslint/parser": "7.10.0",
    "autoprefixer": "10.4.19",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-svelte": "2.39.0",
    "postcss": "8.4.38",
    "prettier": "3.2.5",
    "prettier-plugin-svelte": "3.2.3",
    "prettier-plugin-tailwindcss": "0.5.14",
    "publint": "0.2.8",
    "release-it": "17.3.0",
    "svelte": "5.0.0-next.137",
    "svelte-check": "3.7.1",
    "tailwindcss": "3.4.3",
    "tslib": "2.6.2",
    "typescript": "5.4.5",
    "vite": "5.2.11",
    "vitest": "1.6.0"
  },
  "dependencies": {
    "@floating-ui/core": "1.6.2",
    "@floating-ui/dom": "1.6.5"
  },
  "peerDependencies": {
    "svelte": ">=5.0.0"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${npm.name} v${version}",
      "tagName": "${npm.name}@${version}"
    },
    "github": {
      "release": false
    },
    "hooks": {
      "before:init": [
        "pnpm check",
        "pnpm test"
      ],
      "after:bump": [
        "pnpm package"
      ]
    }
  }
}
